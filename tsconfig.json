{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "rootDir": "./",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true
  },
  "exclude": ["coverage", "node_modules", "lib"],
  "include": ["**/*.js", "**/*.ts"]
}
