{
  "name": "js-bugs",
  "version": "0.0.0",
  "description": "Repo for showing off bugs with js npm packages.",
  "homepage": "https://github.com/G-Rath/js-bugs#readme",
  "bugs": {
    "url": "https://github.com/G-Rath/js-bugs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/G-Rath/js-bugs.git"
  },
  "license": "ISC",
  "author": "Gareth Jones",
  "main": "index.js",
  "scripts": {
    "test": "jest --no-cache"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx",
      "node"
    ],
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "resetMocks": true,
    "restoreMocks": true,
    "testRunner": "jest-circus/runner",
    "transform": {
      ".tsx?": "ts-jest"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^24.8.0",
    "jest-circus": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  }
}
